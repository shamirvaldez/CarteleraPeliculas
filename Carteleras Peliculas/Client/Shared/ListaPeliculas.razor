@inject IRepository RepoPelicula






    @foreach (var pelis in peliculas)
    {
        <div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a>
        <img src="@pelis.Poster" style="width: 225px; height: 300px;" alt="" />
        <p style="max-height: 225px; height:44px; font-size: 15px; font-weight: bold; ">@pelis.titulo</p>
    </a>
    <p>@pelis.FechaLanzamiento</p>
     </div>
    
     }
 


@code {   


    private List<Peliculas> peliculas;
    protected override void OnInitialized()
    {
        peliculas = RepoPelicula.pelicula();
    }
}
